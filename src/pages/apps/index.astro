---
import { getCollection } from 'astro:content'
import Layout from '../../layouts/Layout.astro'
import { SITE_DESCRIPTION, SITE_TITLE } from '../../lib/constants'

const collection = await getCollection('apps')
const apps = collection
  .filter((app) => !app.data.isDraft && !app.id.includes('/'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
---

<Layout title={`Apps - ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
  <main class="mx-auto my-12 flex max-w-lg flex-col justify-center p-4">
  {apps.length > 0 ? <ul class="flex flex-col gap-1.5">
      {
        apps.map((app) => {
          const slug = app.id
          return (
            <li>
              <a
                href={`/apps/${slug}`}
                class="group flex justify-between gap-3"
              >
                <span class="group-hover:underline">{app.data.title}</span>
                <span class="text-nowrap text-neutral-500">
                  {app.data.platform ?? ''}
                </span>
              </a>
            </li>
          )
        })
      }
    </ul> : <p>First app coming soon!</p>}
  </main>
</Layout>
