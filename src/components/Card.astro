---
interface Props {
  title: string;
  subtitle: string;
  body: string;
  href: string;
}

const { href, title, subtitle, body } = Astro.props;
---

<li class="bg-white py-6 pr-6 rounded-xl">
  <a href={href}>
    <h2 class="font-display font-bold text-2xl">
      {title}
    </h2>
    <h3 class="text-lg font-bold mb-2">
      {subtitle}
    </h3>
    <p class="font-serif text-base">
      {body}
    </p>
  </a>
</li>
